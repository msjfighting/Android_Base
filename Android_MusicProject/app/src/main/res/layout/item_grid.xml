<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@android:color/white"
              android:layout_height="wrap_content">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <views.WEqualsHImageView
                android:id="@+id/grid_pic"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:src="@mipmap/img1"
                android:layout_height="wrap_content"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right|center_vertical"
                android:layout_margin="@dimen/albumMarginSize">
            <ImageView
                    android:layout_width="@dimen/playSize"
                    android:layout_height="@dimen/playSize"
                    android:src="@mipmap/play_num"/>
            <TextView
                    android:id="@+id/grid_play_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:text="10万"
                    android:textSize="@dimen/titleSize"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/marginSize"
            />
        </LinearLayout>
    </FrameLayout>
    <TextView
            android:id="@+id/grid_song_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="高点名称"
            android:textSize="@dimen/titleSize"
            android:padding="@dimen/marginSize"
            android:textStyle="bold"
            android:textColor="@color/titleColor"/>

</LinearLayout>